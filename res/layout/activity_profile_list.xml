<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="match_parent"
                      android:background="#DDDEE3"
         android:paddingTop="8dp"
         android:layout_height="match_parent"
      
                           android:descendantFocusability="blocksDescendants"
     >
         
     
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
       android:paddingTop="10dp"
         
         android:paddingRight="8dp"
         android:background="#ffffff"
                    android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
         
         >
         
         <ImageView 
             android:layout_width="75dp"
             android:layout_height="75dp"
             android:layout_centerHorizontal="true"
             android:background="#DDDEE3"
             android:id="@+id/profile_picture"
            android:layout_marginBottom="10dp"
             
             />
         
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text=""
                          android:layout_centerHorizontal="true"
             
             android:singleLine="true"
             android:id="@+id/used_space"
             android:gravity="center"
                
                         android:layout_marginBottom="4dp"
             
             android:layout_below="@id/profile_picture"
            
             />
         
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:singleLine="true"
             android:id="@+id/profile_name"
             
             android:textStyle="bold"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:layout_below="@id/used_space"
             />
         
        </RelativeLayout>
         
         
     <TextView android:id="@android:id/empty"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#FFFFFF"
                   android:textStyle="bold"
               android:gravity="center"
               android:text="No new activity! \n Have you backed up any song?"
               android:paddingBottom="50dp"
               />

     <ListView android:id="@android:id/list"
               android:layout_width="match_parent"
               android:layout_height="0dip"
                      android:paddingLeft="8dp"
         android:paddingRight="8dp"
               android:background="#FFFFFF"
               android:layout_weight="1"
                android:divider="#E3E4DE"
    android:dividerHeight="3dp"
    android:clickable="true"
               android:drawSelectorOnTop="false"/>
     
     
     
          
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="bottom"
             android:background="#F2F2F2"
             android:paddingTop="6dp"
             android:paddingLeft="6dp"
             android:paddingRight="6dp"  
                          android:layout_alignParentBottom="true"
             
           android:baselineAligned="true"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/ic_home"
                 android:text="Home"
                 android:layout_weight="1.0"
                 android:id="@+id/refresh"
                 android:gravity="center"
                 />
             
               <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/followers_button"
                 android:text="Followers"
                 android:layout_weight="1.0"
                 android:id="@+id/followers"
                                  android:gravity="center"
                 
                 
                 />
                   <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/ic_upload_pressed"
                 android:text="Upload"
                 android:id="@+id/upload"
                 android:layout_weight="1.0"
                                  android:gravity="center"
                 
                 
                 />
                      <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/playlist_button"
                 android:text="Playlist"
                 android:id="@+id/playlist_button"
                 android:layout_weight="1.0"
                 android:gravity="center"
                 
                 
                 />
                        <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:singleLine="true"
                                  android:drawableTop="@drawable/ic_more_pressed"
                                  android:gravity="center"
                 android:id="@+id/logout_button"
                 android:text="More"
                 android:layout_weight="1.0"
                 
                 />
             
             
         </LinearLayout>

     
     
 </LinearLayout>