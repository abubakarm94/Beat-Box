<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="match_parent"
                      android:background="#DDDEE3"
         android:paddingTop="8dp"
         android:layout_height="match_parent"
        
         android:descendantFocusability="blocksDescendants"
    >
         
   
         
     <TextView android:id="@android:id/empty"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#FFFFFF"
               android:text="Loading... Invite your friends to Beat Box"
               android:textStyle="bold"
               android:gravity="center"
               android:paddingBottom="50dp"
                     android:paddingLeft="8dp"
         android:paddingRight="8dp"
               />

     <ListView android:id="@android:id/list"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@android:id/empty"
               android:layout_weight="1"
                android:divider="#E3E4DE"
                      android:paddingLeft="8dp"
         android:paddingRight="8dp"
    android:dividerHeight="3dp"
    android:clickable="true"
               android:drawSelectorOnTop="false"/>
     
     
          
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="bottom"
                android:paddingTop="6dp"
             android:paddingLeft="6dp"
             android:paddingRight="6dp"
             android:background="#F2F2F2"
             android:layout_alignParentBottom="true"
           android:baselineAligned="true"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/ic_home_pressed"
                 android:text="Home"
                 android:layout_weight="1.0"
                 android:id="@+id/refresh"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:gravity="center"
                 />
             
               <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/ic_followers_pressed"
                 android:text="Followers"
                 android:layout_weight="1.0"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                 
                 android:id="@+id/followers"
                                  android:gravity="center"
                 
                 
                 />
                   <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/ic_upload_pressed"
                 android:text="Upload"
                 android:id="@+id/upload"
                 android:layout_weight="1.0"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                 
                                  android:gravity="center"
                 
                 
                 />
                      <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableTop="@drawable/playlist_button"
                 android:text="Playlist"
                 android:id="@+id/playlist_button"
                 android:layout_weight="1.0"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                 
                 android:gravity="center"
                 
                 
                 />
                        <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:singleLine="true"
                                  android:drawableTop="@drawable/ic_more_pressed"
                                  android:gravity="center"
                 android:id="@+id/logout_button"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                 
                 android:text="More"
                 android:layout_weight="1.0"
                 
                 />
             
             
         </LinearLayout>

     
     
 </RelativeLayout>